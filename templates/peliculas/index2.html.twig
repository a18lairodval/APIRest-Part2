{% extends 'base.html.twig' %}
{% block title %}Una pelicula{% endblock %}

{% block body %}

    <div class="container">
        <br>
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        {{pelicula.id}}.- {{pelicula.nombre}}
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>{{pelicula.descripcion}}</p>
                        <footer class="blockquote-footer">{{pelicula.genero}}</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-3">
            </div>
        </div>
    </div>
    

{% endblock %}